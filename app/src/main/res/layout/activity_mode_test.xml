<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <View
        android:id="@+id/barreSeparationHorizontale"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="45dp"
        android:background="@color/gris"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/barreSeparationVerticale"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp"
        android:background="@color/gris"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/barreSeparationHorizontale" />

    <TextView
        android:id="@+id/titreModeTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mode_test"
        app:layout_constraintBottom_toTopOf="@+id/barreSeparationHorizontale"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/logoBluetooth"
        android:layout_width="30dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/description"
        app:layout_constraintBottom_toTopOf="@+id/barreSeparationHorizontale"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logobluetoohdeconnecte" />

    <TextView
        android:id="@+id/nomPeripheriqueBluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textSize="15sp"
        android:text="@string/connecteA"
        app:layout_constraintBottom_toTopOf="@+id/barreSeparationHorizontale"
        app:layout_constraintStart_toEndOf="@+id/logoBluetooth"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/t_boutonModeProd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:text="@string/boutonMode_prod"
        app:layout_constraintBottom_toTopOf="@id/barreSeparationHorizontale"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/t_boutonVitesseDeRotation"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@null"
        android:fontFamily="sans-serif-light"
        android:text="@string/boutonVitesseDeRotation"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/t_boutonTensionEnEntree"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/barreSeparationVerticale"
        app:layout_constraintTop_toBottomOf="@+id/barreSeparationHorizontale"
        tools:visibility="visible" />

    <Button
        android:id="@+id/t_boutonTensionEnEntree"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@null"
        android:fontFamily="sans-serif-light"
        android:text="@string/boutonTensionEnEntree"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/t_boutonCourantEnEntree"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/barreSeparationVerticale"
        app:layout_constraintTop_toBottomOf="@+id/t_boutonVitesseDeRotation"
        tools:visibility="visible" />

    <Button
        android:id="@+id/t_boutonCourantEnEntree"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@null"
        android:fontFamily="sans-serif-light"
        android:text="@string/boutonCourantEnEntree"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/t_boutonPuissanceFournie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/barreSeparationVerticale"
        app:layout_constraintTop_toBottomOf="@+id/t_boutonTensionEnEntree"
        tools:visibility="visible" />

    <Button
        android:id="@+id/t_boutonPuissanceFournie"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@null"
        android:fontFamily="sans-serif-light"
        android:text="@string/boutonPuissanceFournie"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/t_boutonEnergieProduite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/barreSeparationVerticale"
        app:layout_constraintTop_toBottomOf="@+id/t_boutonCourantEnEntree"
        tools:visibility="visible" />

    <Button
        android:id="@+id/t_boutonEnergieProduite"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@null"
        android:fontFamily="sans-serif-light"
        android:text="@string/boutonEnergieProduite"

        android:textAllCaps="false"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/t_boutonTemperatureAlternateur"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/barreSeparationVerticale"
        app:layout_constraintTop_toBottomOf="@+id/t_boutonPuissanceFournie"
        tools:visibility="visible" />

    <Button
        android:id="@+id/t_boutonTemperatureAlternateur"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@null"
        android:fontFamily="sans-serif-light"
        android:text="@string/boutonTemperatureAlternateur"

        android:textAllCaps="false"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/t_boutonTemperatureFrein"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/barreSeparationVerticale"
        app:layout_constraintTop_toBottomOf="@+id/t_boutonEnergieProduite"
        tools:visibility="visible" />

    <Button
        android:id="@+id/t_boutonTemperatureFrein"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@null"
        android:fontFamily="sans-serif-light"
        android:text="@string/boutonTemperatureFrein"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/t_boutonEnvoyerSerieDePoints"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/barreSeparationVerticale"
        app:layout_constraintTop_toBottomOf="@+id/t_boutonTemperatureAlternateur"
        tools:visibility="visible" />


    <Button
        android:id="@+id/t_boutonRAZenergie"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:text="@string/remiseAZero"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/t_boutonTemperatureAlternateur"
        app:layout_constraintEnd_toStartOf="@+id/t_boutonEnergieProduite"
        app:layout_constraintStart_toStartOf="@+id/barreSeparationVerticale"
        app:layout_constraintTop_toBottomOf="@+id/t_boutonPuissanceFournie" />

    <TextView
        android:id="@+id/t_vitesseRotation"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginEnd="3dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/valeurNulle"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/t_boutonVitesseDeRotation"
        app:layout_constraintEnd_toEndOf="parent"
/>
    <TextView
        android:id="@+id/t_tensionEnEntree"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginEnd="3dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/valeurNulle"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/t_boutonTensionEnEntree"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/t_courantEnEntree"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginEnd="3dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/valeurNulle"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/t_boutonCourantEnEntree"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/t_puissanceFournie"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginEnd="3dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/valeurNulle"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/t_boutonPuissanceFournie"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/t_energieProduite"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginEnd="3dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/valeurNulle"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/t_boutonEnergieProduite"
        app:layout_constraintEnd_toEndOf="parent"
         />

    <TextView
        android:id="@+id/t_temperatureAlternateur"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginEnd="3dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/valeurNulle"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/t_boutonTemperatureAlternateur"
        app:layout_constraintEnd_toEndOf="parent"
         />

    <TextView
        android:id="@+id/t_temperatureFrein"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/valeurNulle"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/t_boutonTemperatureFrein"
        app:layout_constraintEnd_toEndOf="parent"
        />










    <com.jjoe64.graphview.GraphView
        android:id="@+id/t_graphique"
        android:layout_width="325dp"
        android:layout_height="250dp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/barreSeparationVerticale"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barreSeparationHorizontale" />

    <EditText
        android:id="@+id/t_saisieAbscisse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="4"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/t_boutonPointPrécédent"
        app:layout_constraintEnd_toStartOf="@+id/t_saiseOrdonnee"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t_graphique" />

    <EditText
        android:id="@+id/t_saiseOrdonnee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="4"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/t_boutonPointSuivant"
        app:layout_constraintEnd_toStartOf="@+id/t_boutonValidationPoint"
        app:layout_constraintStart_toEndOf="@+id/t_saisieAbscisse"
        app:layout_constraintTop_toBottomOf="@+id/t_graphique" />

    <Button
        android:id="@+id/t_boutonValidationPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/validerPoint"
        android:fontFamily="sans-serif-light"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/t_boutonSupprimerPoint"
        app:layout_constraintEnd_toStartOf="@+id/barreSeparationVerticale"
        app:layout_constraintStart_toEndOf="@+id/t_saiseOrdonnee"
        app:layout_constraintTop_toBottomOf="@+id/t_graphique" />

    <Button
        android:id="@+id/t_boutonPointPrécédent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/precedent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/t_saisieAbscisse"
        app:layout_constraintStart_toStartOf="@+id/t_saisieAbscisse"
        app:layout_constraintTop_toBottomOf="@+id/t_saisieAbscisse"
        tools:visibility="visible" />

    <Button
        android:id="@+id/t_boutonPointSuivant"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/suivant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/t_saiseOrdonnee"
        app:layout_constraintStart_toStartOf="@+id/t_saiseOrdonnee"
        app:layout_constraintTop_toBottomOf="@+id/t_saiseOrdonnee"
        tools:visibility="visible" />

    <Button
    android:id="@+id/t_boutonSupprimerPoint"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="sans-serif-light"
    android:text="@string/supprimerPoint"
    android:textAllCaps="false"
    android:textSize="15sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="@+id/t_boutonValidationPoint"
    app:layout_constraintStart_toStartOf="@+id/t_boutonValidationPoint"
    app:layout_constraintTop_toBottomOf="@+id/t_boutonValidationPoint"
    tools:visibility="visible" />

    <Button
        android:id="@+id/t_boutonEnvoyerSerieDePoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="@string/envoyerPoints"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/barreSeparationVerticale"
        app:layout_constraintTop_toBottomOf="@+id/t_boutonTemperatureFrein"
        tools:visibility="visible" />



</androidx.constraintlayout.widget.ConstraintLayout>